[class^="icon-"], [class*=" icon-"] {
  background-image: url("<%= asset_data_uri('bootstrap/glyphicons-halflings.png') %>")
}

.icon-white {
  background-image: url("<%= asset_data_uri('bootstrap/glyphicons-halflings-white.png') %>");
}

.navbar .navbar-search {
  overflow: auto; /* block formatting context to shrink in between surrounding floats */
  float: none;
  text-align: center;
}

.dropdown-menu {
  h3 {
    margin: 0 10px;
  }
  label {
    margin: 0;
    padding: 2px 10px;
  }
  label:hover, label:hover a {
    text-decoration: none;
    color: #FFF;
    background-color: #08C;
  }
  label input, label a {
    display: inline;
  }
  label input {
    margin-right: 0.5em;
  }
  label a {
    padding-left: 0;
  }
}

.navbar .brand {
  color: #fff;
}

form#search {
  .btn-group {
    margin-top: 10px;
  }
}

.navbar-inner {
  background: -moz-linear-gradient(top,#373737 0,#343434 50%,#242424 100%);
  background: -o-linear-gradient(top,#373737 0,#343434 50%,#242424 100%);
  background: -ms-linear-gradient(top,#373737 0,#343434 50%,#242424 100%);
  background: -webkit-gradient(linear,left top,left bottom,from(#373737),color-stop(0.5,#343434),to(#242424));
  background: -webkit-gradient(linear,left bottom,left top,color-stop(1,rgba(55, 55, 55, 1)),color-stop(0.5,rgba(52, 52, 52, 1)),color-stop(0.5,rgba(52, 52, 52, 1)),color-stop(0,rgba(36, 36, 36, 1)));
  border-top: 1px solid #2A2A2A;
  border-bottom: 1px solid black;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}
