[class^="icon-"], [class*=" icon-"] {
  background-image: url("<%= asset_data_uri('bootstrap/glyphicons-halflings.png') %>")
}

.icon-white {
  background-image: url("<%= asset_data_uri('bootstrap/glyphicons-halflings-white.png') %>");
}

body {
  margin-top: 50px;
}

.sidebar {
  margin-top: 5px;
  padding: 8px 0;
}

form.button_to {
  display: inline-block;
}

form.button_to input {
  margin: 0;
}

form ol {
  margin-left: 0;
  list-style: none;
}

.sorting-controls {
  margin-left: 2px;
}

tr.highlightable {
  cursor: pointer;
}

/* visualizations */

#infovis {
  float: right;
  width: 300px;
  height: 300px;
  overflow: hidden;
  margin: 0 0 10px 10px;
  border: 1px solid #EEE;
}

#infovis .button {
  float: right;
}

#infovis .concept a {
  color: #000;
}

#infovis.filtered .concept {
  overflow: visible;
  color: #111;
}

#infovis .label {
  padding: 0 2px;
  color: #111;
  background-color: #EEE;
}

#infovis-label .label {
  font-size: 0.8em;
}
