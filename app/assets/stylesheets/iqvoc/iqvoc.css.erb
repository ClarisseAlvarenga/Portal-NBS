[class^="icon-"], [class*=" icon-"] {
  background-image: url("<%= asset_data_uri('bootstrap/glyphicons-halflings.png') %>")
}

.icon-white {
  background-image: url("<%= asset_data_uri('bootstrap/glyphicons-halflings-white.png') %>");
}

body {
  margin-top: 50px;
}

.sidebar {
  margin-top: 5px;
  padding: 8px 0;
}

.sidebar input[type=checkbox] {
  display: inline;
}

/* forms */

form.button_to {
  display: inline-block;
}

form.button_to input {
  margin: 0;
}

form ol {
  margin-left: 0;
  list-style: none;
}

form.button_to {
  margin-bottom: 0;
}

dl.note_annotations {
  margin-top: 6px;
}

.sorting-controls {
  margin-left: 2px;
}

tr.highlightable {
  cursor: pointer;
}

img.spinner {
  margin-left: -25px;
}

.alert-error ul {
  margin-left: 30px;
  margin-bottom: 0px;
}

/* jQuery UI customizations */

.ui-widget {
  font-family: inherit;
  font-size: inherit;
}
.ui-widget .ui-widget {
  font-size: inherit;
}
.ui-widget input, .ui-widget select, .ui-widget textarea, .ui-widget button {
  font-family: inherit;
  font-size: inherit;
}

/* navigation bar (based on Bootstrap) */

.navbar .navbar-search {
  overflow: auto; /* block formatting context to shrink in between surrounding floats */
  float: none;
  text-align: center;
}

/* dropdowns (based on Bootstrap) */

.dropdown-menu h3 {
  margin: 0 10px;
}

.dropdown-menu label {
  margin: 0;
  padding: 2px 10px;
}

.dropdown-menu label:hover,
.dropdown-menu label:hover a {
  text-decoration: none;
  color: #FFF;
  background-color: #08C;
}

.dropdown-menu label input,
.dropdown-menu label a {
  display: inline;
}

.dropdown-menu label input {
  margin-right: 0.5em;
}

.dropdown-menu label a {
  padding-left: 0;
}

/* entity selector widget */

.entity_select li {
  margin: 3px;
  padding: 1px 3px;
  border: 1px solid #CCD5E4;
  border-radius: 5px;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
  font-size: 11px;
  color: #000;
  background-color: #EFF2F7;
  width: auto;
}

.entity_select a.remove_entity {
  margin-left: 5px;
  font-weight: bold;
  color: #A6B3CF;
  cursor: pointer;
}

.entity_select img {
  margin-left: -20px; /* move into adjacent INPUT */
}

.entity_select input.qualified {
  width: 5em;
  margin-left: 0.5em;
}

.entity_list { /* contain floats */
  width: 100%;
  overflow: hidden;
  list-style-type: none;
  margin-top: 5px;
}

.entity_list li {
  float: left;
}

.relation-body .entity_list {
  margin: 0;
  padding: 0;
}

.sections .entity_list li,
.relation-body .entity_list li {
  margin-right: 1em;
}

.sections .entity_list li:after,
.relation-body .entity_list li:after {
  content: ",";
}
.sections .entity_list li:last-child:after,
.relation-body .entity_list li:last-child:after {
  content: "";
}

/* hacks */

legend {
  margin-bottom: 0;
}

fieldset > div:first-of-type, ol:first-of-type, p {
  -webkit-margin-top-collapse: separate;
  margin-top: 27px;
}

/* visualizations */

#infovis {
  float: right;
  width: 300px;
  height: 300px;
  overflow: hidden;
  margin: 0 0 10px 10px;
  border: 1px solid #EEE;
}

#infovis .button {
  float: right;
}

#infovis .concept a {
  color: #000;
}

#infovis.filtered .concept {
  overflow: visible;
  color: #111;
}

#infovis .label {
  padding: 0 2px;
  color: #111;
  background-color: #EEE;
}

#infovis-label .label {
  font-size: 0.8em;
}
