[class^="icon-"], [class*=" icon-"] {
  background-image: url("<%= asset_data_uri('bootstrap/glyphicons-halflings.png') %>")
}

.icon-white {
  background-image: url("<%= asset_data_uri('bootstrap/glyphicons-halflings-white.png') %>");
}

body {
  margin-top: 50px;
}

.sidebar {
  margin-top: 5px;
  padding: 8px 0;
}

.sidebar input[type=checkbox] {
  display: inline;
}

/* forms */

form.button_to {
  display: inline-block;
}

form.button_to input {
  margin: 0;
}

form ol {
  margin-left: 0;
  list-style: none;
}

form.button_to {
  margin-bottom: 0;
}

dl.note_annotations {
  margin-top: 6px;
}

.sorting-controls {
  margin-left: 2px;
}

tr.highlightable {
  cursor: pointer;
}

img.spinner {
  margin-left: -25px;
}

.alert-error ul {
  margin-left: 30px;
  margin-bottom: 0px;
}

/* jQuery UI customizations */

.ui-widget {
  font-family: inherit;
  font-size: inherit;
}
.ui-widget .ui-widget {
  font-size: inherit;
}
.ui-widget input, .ui-widget select, .ui-widget textarea, .ui-widget button {
  font-family: inherit;
  font-size: inherit;
}

/* navigation bar (based on Bootstrap) */

.navbar .navbar-search {
  overflow: auto; /* block formatting context to shrink in between surrounding floats */
  float: none;
  text-align: center;
}

/* dropdowns (based on Bootstrap) */

.dropdown-menu h3 {
  margin: 0 10px;
}

.dropdown-menu label {
  margin: 0;
  padding: 2px 10px;
}

.dropdown-menu label:hover,
.dropdown-menu label:hover a {
  text-decoration: none;
  color: #FFF;
  background-color: #08C;
}

.dropdown-menu label input,
.dropdown-menu label a {
  display: inline;
}

.dropdown-menu label input {
  margin-right: 0.5em;
}

.dropdown-menu label a {
  padding-left: 0;
}

/* hacks */

legend {
  margin-bottom: 0;
}

fieldset > div:first-of-type, ol:first-of-type, p {
  -webkit-margin-top-collapse: separate;
  margin-top: 27px;
}

/* visualizations */

#infovis {
  float: right;
  width: 300px;
  height: 300px;
  overflow: hidden;
  margin: 0 0 10px 10px;
  border: 1px solid #EEE;
}

#infovis .button {
  float: right;
}

#infovis .concept a {
  color: #000;
}

#infovis.filtered .concept {
  overflow: visible;
  color: #111;
}

#infovis .label {
  padding: 0 2px;
  color: #111;
  background-color: #EEE;
}

#infovis-label .label {
  font-size: 0.8em;
}
