<ul id="navi_main">
  <% if can?(:use, :dashboard) %>
  <li class="<%= params[:controller] == 'dashboard' ? 'active' : '' %>">
    <%= link_to "Dashboard", dashboard_path(:lang => @active_language || I18n.locale) %>
  </li>
  <% end %>
  <li class="<%= params[:controller] == 'concepts/hierarchical' ? 'active' : '' %>">
    <%= link_to t("txt.views.navigation.hierarchical"), hierarchical_concepts_path(:lang => @active_language || I18n.locale) %>
  </li>
  <li class="<%= params[:controller] == 'concepts/alphabetical' ? 'active' : '' %>">
    <%= link_to t("txt.views.navigation.alphabetical"), alphabetical_concepts_path(:lang => @active_language|| I18n.locale, :letter => 'a') %>
  </li>
  <li class="<%= params[:controller] == 'search_results' ? 'active' : '' %>">
    <%= link_to t("txt.views.navigation.search"), search_path(:lang => @active_language|| I18n.locale) %>
  </li>
  <% if can?(:manage, User) %>
  <li class="<%= params[:controller] == 'users' ? 'active' : '' %>">
    <%= link_to t("txt.views.navigation.users"), users_path(:lang => @active_language|| I18n.locale) %>
  </li>
  <% end %>
  <li class="<%= params[:controller] == 'pages' && params[:action] == 'about' ? 'active' : '' %>">
    <%= link_to t("txt.views.navigation.about"), about_path(:lang => @active_language|| I18n.locale) %>
  </li>
</ul>