<%- if concept = search_result.owner -%>
  <dt>
    <%= link_to highlight_query(search_result.target.value, params[:query], @multi_query), concept_path(:lang => I18n.locale, :id => concept) %>
  </dt>
  <dd><%= t('txt.views.search_results.type') %>: <%= search_result.class.model_name.human %></dd>
  <%- if search_result.target.language -%>
    <dd><%= t('txt.views.search_results.language') %>: <%= search_result.target.language %></dd>
  <%- end -%>
<%- end -%>
