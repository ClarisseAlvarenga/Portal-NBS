<%- matches = concept.matches_for_class(klass) -%>
<div class="relation">
  <h4><%= klass.model_name.human(:count => 2) %></h4>
  <div class="relation-body">
    <% if matches.count > 0 %>
      <ul>
      <% matches.each { |match| %>
        <li><%= match_url(match.value) %></li>
      <% } %>
      </ul>
    <% else %>
      <p class="term-unavailable">-</p>
    <% end %>
  </div>
</div>
