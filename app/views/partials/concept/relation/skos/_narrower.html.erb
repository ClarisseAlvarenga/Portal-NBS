<div class="relation">
  <h4><%= t('txt.views.concepts.narrower') %></h4>
  <div class="relation-body">
    <% if concept.related_concepts_for_relation_class(Iqvoc::Concept.broader_relation_class.narrower_class).length > 0 %>
      <div class="selector">
        <%= treeview concept.id %>
      </div>
    <% else %>
      <p><%= t('txt.views.concepts.missing.narrower') %></p>
    <% end %>
  </div>
</div>