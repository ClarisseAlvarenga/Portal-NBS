<div class="relation">
  <h4><%= t('txt.views.concepts.broader') %></h4>
  <div class="relation-body">
    <% if concept.related_concepts_for_relation_class(Iqvoc::Concept.broader_relation_class).length > 0 %>
      <div class="selector">
        <%= render :partial => "hierarchical_concepts/broader_treeview", :locals => { :root => concept.id } %>
      </div>
    <% else %>
      <p><%= t('txt.views.concepts.missing.broader') %></p>
    <% end %>
  </div>
</div>
