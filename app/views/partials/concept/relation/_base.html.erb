<div class="relation">
  <h3><%= t("txt.partials.concept.relation.#{klass.name.to_relation_name}") %></h3>
  <% related_concepts = concept.related_concepts_for_relation_class(klass) %>
  <% if related_concepts.count > 0 %>
    <%= raw related_concepts.map { |c|
      link_to(c.pref_label, concept_path(:lang => c.pref_label.language, :id => c))
    }.join(", ")  %>
  <% else %>
    <p class="term-unavailable"><%= t('txt.partials.concept.relation.missing') %></p>
  <% end %>
</div>