<div class="relation" id="<%= klass.model_name.to_relation_name %>">
  <h4><%= klass.model_name.human(:count => 2) %></h4>
  <div class="relation-body">
    <%= raw association_listing(
            concept.related_concepts_for_relation_class(klass,
                params[:published] != "0")
        ) { |c|
          link_to(c.pref_label,
              concept_path(:lang => c.pref_label.language, :id => c))
        }
    %>
  </div>
</div>
