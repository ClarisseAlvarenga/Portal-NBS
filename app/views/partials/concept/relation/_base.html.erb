<div class="relation" id="<%= klass.model_name.to_s.to_relation_name %>">
  <h4><%= klass.model_name.human(:count => 2) %></h4>
  <div class="relation-body">
		<% if concept.related_concepts_for_relation_class(klass, params[:published] != "0").any? %>
    <%= item_listing(concept.related_concepts_for_relation_class(klass, params[:published] != "0")) do |c|
      link_to(c.pref_label, concept_path(:id => c))
    end %>
		<%else%>
			<span class='empty'><%= t('txt.common.value.empty')%></span>
		<%end%>
  </div>
</div>
