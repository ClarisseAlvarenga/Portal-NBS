<div class="relation">
  <%- if defined?(concept) -%>
    <% notes = concept.notes_for_class(klass) %>
    <h4><%= t("txt.partials.note.#{klass.name.to_relation_name}", :count => notes.count) %></h4>
    <div class="relation-body">
      <span><%= notes.count > 0 ? render(:partial => 'partials/note/note', :collection => notes) : t("txt.partials.note.missing") %></span>
    </div>
  <%- elsif defined?(label) -%>
    <% notes = label.notes_for_class(klass) %>
    <h4><%= t("txt.partials.note.#{klass.name.to_relation_name}", :count => notes.count) %></h4>
    <div class="relation-body">
      <span><%= notes.count > 0 ? render(:partial => 'partials/note/note', :collection => notes) : t("txt.partials.note.missing") %></span>
    </div>
  <%- end -%>
</div>