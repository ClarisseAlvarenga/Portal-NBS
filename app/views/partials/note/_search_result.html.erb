<dt>
  <% if result.owner.is_a?(Concept::Base) %>
    <%= link_to "#{result.owner.pref_label.to_s} (#{result.owner.origin})", concept_path(:lang => I18n.locale, :id => result.owner) %><br>
  <% elsif result.owner.is_a?(Label::Base) %>
    <%= link_to result.owner.value, label_path(:lang => I18n.locale, :id => result.owner) %><br>
  <% elsif result.owner.is_a?(Collection::Base) %>
    <%= link_to result.value, collection_path(:lang => I18n.locale, :id => result.owner) %><br>
  <% end %>
</dt>
<dd><%= t('txt.views.search_results.type') %>: <%= result.class.model_name.human %></dd>
