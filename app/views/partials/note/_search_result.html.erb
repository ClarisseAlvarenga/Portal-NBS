<dt>
  <% if result.owner.is_a?(Concept::Base) %>
    <%= link_to highlight_query("#{result.owner.pref_label.to_s} (#{result.owner.origin})", params[:query], @multi_query), concept_path(:lang => I18n.locale, :id => result.owner) %><br>
  <% elsif result.owner.is_a?(Label::Base) %>
    <%= link_to highlight_query(result.owner.value, params[:query]), label_path(:lang => I18n.locale, :id => result.owner) %><br>
  <% elsif result.owner.is_a?(Collection::Base) %>
    <%= link_to highlight_query(result.owner.localized_note.to_s, params[:query], @multi_query), collection_path(:lang => I18n.locale, :id => result.owner) %><br>
  <% end %>
</dt>
<dd><%= t('txt.views.search_results.type') %>: <%= result.class.model_name.human %></dd>
