<% unless note.new_record? %>
  <%= tag("div", { :class => "translation", :lang => note.language || nil }, true) %>
    <div class="note_language <%= note.language %>"><%= "(#{note.language ? note.language : '-'})" %></div>
    <span><%= linkify(note.value) %></span>
    <ul>
      <% note.annotations.each do |annotation| %>
        <li><%= linkify "#{annotation.identifier} #{annotation.value}" %></li>
      <% end %>
    </ul>
  </div>
<% end %>
