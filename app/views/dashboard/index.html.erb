<%= page_header :title => 'Dashboard' %>

<ul class="nav nav-tabs">
  <% Iqvoc.first_level_classes.each_with_index do |klass, index| %>
    <li <%= "class=active" if index == 0 %>><a href=<%= "##{klass.model_name.singular}" %> data-toggle="tab"><%= klass.model_name.human(count: 2) %></a></li>
  <% end %>
</ul>

<div class="tab-content">
  <% Iqvoc.first_level_classes.each_with_index do |klass, index| %>
    <div id=<%= "#{klass.model_name.singular}" %> class="tab-pane fade in<%= " active" if index == 0 %>">
      <%= render partial: 'table', locals: {items: instance_variable_get("@#{klass.model_name.singular}")} %>
    </div>
  <% end %>
</div>

<%= render 'dashboard/sidebar' %>
