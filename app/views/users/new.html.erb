<h2><%= t('txt.views.users.new.header') %></h2>

<%= error_messages_for @user %>

<%= form_for(@user, :url => users_path(:lang => @active_language), :html => {:class => "form"}) do |f| %>
  <%= render :partial => "form", :locals => { :f => f } %>
<% end %>

<%= content_for :sub_navigation do %>
  <ul>
    <li><%= back_link users_path(:lang => @active_language) %></li>
  </ul>
<% end %>
